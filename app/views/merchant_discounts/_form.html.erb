<%= form_with url: path, model: @discount, method: method, class: "discount_form", local: true do |f| %>
  <%= f.label :discount_percentage %>
  <%= f.text_field :discount_percentage, id: "percentage" %>
  <%= f.label :quantity_threshold %>
  <%= f.text_field :quantity_threshold, id: "quantity" %>
<%= submit_tag button_text %>
<% end %>
